<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tab_appearance">
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="gallery_commodity_image">
        <item name="android:layout_width">@dimen/dp_158</item>
        <item name="android:layout_height">@dimen/dp_158</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="gallery_commodity_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_2</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/title_text_default</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="gallery_commodity_tag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_2</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/title_sub_text_default</item>
        <item name="android:textSize">@dimen/sp_11</item>
    </style>

    <style name="gallery_commodity_price">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_2</item>
        <item name="android:drawableStart">@drawable/vector_drawable_yuan</item>
        <item name="android:textColor">@color/price_text</item>
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="gallery_commodity_title_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_175</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/dp_9</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="search_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_10</item>
        <item name="android:layout_marginTop">@dimen/dp_4_5</item>
        <item name="android:layout_marginBottom">@dimen/dp_4_5</item>
        <item name="android:layout_weight">@integer/search_view_weight</item>
    </style>

    <style name="Chip_TextAppearance">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/chip_text</item>
    </style>

</resources>
