<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/filter_apply_bottom_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_15">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/filter_apply_bottom_image_share_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_share_gray_24dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/filter_apply_bottom_text_share_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_toEndOf="@id/filter_apply_bottom_image_share_icon"
            android:text="@string/share"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_13" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/filter_apply_bottom_text_share_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/filter_apply_bottom_text_share_title"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_toEndOf="@id/filter_apply_bottom_image_share_icon"
            android:text="@string/share_to_other_people"
            android:textSize="@dimen/sp_10" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/light_white" />

    <RelativeLayout
        android:id="@+id/filter_apply_bottom_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_15">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/filter_apply_bottom_image_save_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_save_gray_24dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/filter_apply_bottom_text_save_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_toEndOf="@id/filter_apply_bottom_image_save_icon"
            android:text="@string/save_change"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_13" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/filter_apply_bottom_text_save_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/filter_apply_bottom_text_save_title"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_toEndOf="@id/filter_apply_bottom_image_save_icon"
            android:text="@string/create_copy_for_your_pic"
            android:textSize="@dimen/sp_10" />

    </RelativeLayout>

</LinearLayout>
