<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/classification_bar_margin_top"
    android:layout_marginBottom="@dimen/classification_bar_margin_bottom"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="@integer/classification_button_weight"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/classification_hot_list"
            android:layout_width="@dimen/classification_button_size"
            android:layout_height="@dimen/classification_button_size"
            android:layout_gravity="center"
            android:layout_margin="@dimen/classification_button_margin"
            android:src="@drawable/classification_ranking" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/label_text_size"
            android:layout_marginTop="@dimen/classification_label_margin_top"
            android:textColor="@color/title_text_default"
            android:labelFor="@id/classification_hot_list"
            android:text="@string/hot_list" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="@integer/classification_button_weight"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/classification_check_in"
            android:layout_width="@dimen/classification_button_size"
            android:layout_height="@dimen/classification_button_size"
            android:layout_gravity="center"
            android:layout_margin="@dimen/classification_button_margin"
            android:src="@drawable/classification_list" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/label_text_size"
            android:layout_marginTop="@dimen/classification_label_margin_top"
            android:textColor="@color/title_text_default"
            android:labelFor="@id/classification_check_in"
            android:text="@string/check_in" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="@integer/classification_button_weight"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/classification_ticket_market"
            android:layout_width="@dimen/classification_button_size"
            android:layout_height="@dimen/classification_button_size"
            android:layout_gravity="center"
            android:layout_margin="@dimen/classification_button_margin"
            android:src="@drawable/classification_ticket" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/label_text_size"
            android:layout_marginTop="@dimen/classification_label_margin_top"
            android:textColor="@color/title_text_default"
            android:labelFor="@id/classification_ticket_market"
            android:text="@string/ticket_market" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="@integer/classification_button_weight"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/classification_class"
            android:layout_width="@dimen/classification_button_size"
            android:layout_height="@dimen/classification_button_size"
            android:layout_gravity="center"
            android:layout_margin="@dimen/classification_button_margin"
            android:src="@drawable/classification_school" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/label_text_size"
            android:layout_marginTop="@dimen/classification_label_margin_top"
            android:textColor="@color/title_text_default"
            android:labelFor="@id/classification_class"
            android:text="@string/classification" />

    </LinearLayout>

</LinearLayout>
