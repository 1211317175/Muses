<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_13"
    android:layout_marginTop="@dimen/dp_9"
    android:layout_marginEnd="@dimen/dp_13"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/hot_product"
            android:textColor="@color/title_text_default"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/more_hot_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more"
                android:textColor="@color/title_sub_text_default"
                android:textSize="@dimen/sp_14" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_13"
                android:layout_gravity="center_vertical"
                android:src="@drawable/more" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.victorxu.muses.custom.AdvancedImageView
            android:id="@+id/image_hot_product_title"
            style="@style/gallery_commodity_title_image"
            android:background="@color/light_white"
            app:borderRadius="@dimen/dp_4_5"
            app:type="round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/hot_product_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_237"
                android:layout_marginEnd="@dimen/dp_2"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.victorxu.muses.custom.AdvancedImageView
                    android:id="@+id/image_hot_product_1_image"
                    style="@style/gallery_commodity_image"
                    android:background="@color/light_white"
                    app:borderRadius="@dimen/dp_4_5"
                    app:type="round" />

                <LinearLayout
                    android:layout_width="@dimen/dp_158"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="start"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_hot_product_1_title"
                        style="@style/gallery_commodity_title" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_hot_product_1_tag"
                        style="@style/gallery_commodity_tag" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_hot_product_1_price"
                        style="@style/gallery_commodity_price" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/hot_product_2"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_237"
                android:layout_marginStart="@dimen/dp_2"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.victorxu.muses.custom.AdvancedImageView
                    android:id="@+id/image_hot_product_2_image"
                    style="@style/gallery_commodity_image"
                    android:background="@color/light_white"
                    app:borderRadius="@dimen/dp_4_5"
                    app:type="round" />

                <LinearLayout
                    android:layout_width="@dimen/dp_158"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="start"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_hot_product_2_title"
                        style="@style/gallery_commodity_title" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_hot_product_2_tag"
                        style="@style/gallery_commodity_tag" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_hot_product_2_price"
                        style="@style/gallery_commodity_price" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_9"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/hot_product_3"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_237"
                android:layout_marginEnd="@dimen/dp_2"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.victorxu.muses.custom.AdvancedImageView
                    android:id="@+id/image_hot_product_3_image"
                    style="@style/gallery_commodity_image"
                    android:background="@color/light_white"
                    app:borderRadius="@dimen/dp_4_5"
                    app:type="round" />


                <LinearLayout
                    android:layout_width="@dimen/dp_158"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="start"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_hot_product_3_title"
                        style="@style/gallery_commodity_title" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_hot_product_3_tag"
                        style="@style/gallery_commodity_tag" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_hot_product_3_price"
                        style="@style/gallery_commodity_price" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/hot_product_4"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_237"
                android:layout_marginStart="@dimen/dp_2"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.victorxu.muses.custom.AdvancedImageView
                    android:id="@+id/image_hot_product_4_image"
                    style="@style/gallery_commodity_image"
                    android:background="@color/light_white"
                    app:borderRadius="@dimen/dp_4_5"
                    app:type="round" />

                <LinearLayout
                    android:layout_width="@dimen/dp_158"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="start"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_hot_product_4_title"
                        style="@style/gallery_commodity_title" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_hot_product_4_tag"
                        style="@style/gallery_commodity_tag" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_hot_product_4_price"
                        style="@style/gallery_commodity_price" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
