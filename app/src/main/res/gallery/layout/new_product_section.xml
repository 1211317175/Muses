<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/product_margin_start"
    android:layout_marginTop="@dimen/product_margin_top"
    android:layout_marginEnd="@dimen/product_margin_end"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/new_product"
            android:textColor="@color/title_text_default"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/more_new_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more"
                android:textColor="@color/title_sub_text_default"
                android:textSize="@dimen/tip_text_size" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/more_icon_size"
                android:layout_height="@dimen/more_icon_size"
                android:layout_gravity="center_vertical"
                android:src="@drawable/more" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.victorxu.muses.custom.view.AdvancedImageView
            android:id="@+id/image_new_product_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/product_content_title_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/product_content_title_margin_top"
            android:scaleType="fitXY"
            android:src="@drawable/product_title"
            app:borderRadius="@dimen/product_image_radius"
            app:type="round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/product_content_margin_top"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/product_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/product_content_height"
                android:layout_marginEnd="@dimen/product_content_margin_end"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.victorxu.muses.custom.view.AdvancedImageView
                    android:id="@+id/image_product_1_image"
                    android:layout_width="@dimen/product_content_image_size"
                    android:layout_height="@dimen/product_content_image_size"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:src="@drawable/product1"
                    app:borderRadius="@dimen/product_image_radius"
                    app:type="round" />

                <LinearLayout
                    android:layout_width="@dimen/product_content_image_size"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="start"
                    android:orientation="vertical">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/text_product_1_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/product_text_margin_top"
                            android:singleLine="true"
                            android:text="@string/product_1_title"
                            android:textColor="@color/title_text_default"
                            android:textSize="@dimen/content_title_size"
                            android:textStyle="bold" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/text_product_1_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/product_text_margin_top"
                            android:singleLine="true"
                            android:text="@string/product_1_tag"
                            android:textColor="@color/title_sub_text_default"
                            android:textSize="@dimen/content_sub_title_size" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/text_product_1_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/product_text_margin_top"
                            android:text="@string/product_1_price"
                            android:textColor="@color/price_text"
                            android:textSize="@dimen/content_title_size"
                            android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/product_2"
                android:layout_width="0dp"
                android:layout_height="@dimen/product_content_height"
                android:layout_marginStart="@dimen/product_content_margin_start"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.victorxu.muses.custom.view.AdvancedImageView
                    android:id="@+id/image_product_2_image"
                    android:layout_width="@dimen/product_content_image_size"
                    android:layout_height="@dimen/product_content_image_size"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:src="@drawable/product2"
                    app:borderRadius="@dimen/product_image_radius"
                    app:type="round" />

                <LinearLayout
                    android:layout_width="@dimen/product_content_image_size"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="start"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/text_product_2_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/product_text_margin_top"
                        android:singleLine="true"
                        android:text="@string/product_2_title"
                        android:textColor="@color/title_text_default"
                        android:textSize="@dimen/content_title_size"
                        android:textStyle="bold" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/text_product_2_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/product_text_margin_top"
                        android:singleLine="true"
                        android:text="@string/product_2_tag"
                        android:textColor="@color/title_sub_text_default"
                        android:textSize="@dimen/content_sub_title_size" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/text_product_2_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/product_text_margin_top"
                        android:text="@string/product_2_price"
                        android:textColor="@color/price_text"
                        android:textSize="@dimen/content_title_size"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/product_content_margin_top_mini"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/product_3"
                android:layout_width="0dp"
                android:layout_height="@dimen/product_content_height"
                android:layout_marginEnd="@dimen/product_content_margin_end"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.victorxu.muses.custom.view.AdvancedImageView
                    android:id="@+id/image_product_3_image"
                    android:layout_width="@dimen/product_content_image_size"
                    android:layout_height="@dimen/product_content_image_size"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:src="@drawable/product1"
                    app:borderRadius="@dimen/product_image_radius"
                    app:type="round" />

                <LinearLayout
                    android:layout_width="@dimen/product_content_image_size"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="start"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/text_product_3_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/product_text_margin_top"
                        android:singleLine="true"
                        android:text="@string/product_1_title"
                        android:textColor="@color/title_text_default"
                        android:textSize="@dimen/content_title_size"
                        android:textStyle="bold" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/text_product_3_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/product_text_margin_top"
                        android:singleLine="true"
                        android:text="@string/product_1_tag"
                        android:textColor="@color/title_sub_text_default"
                        android:textSize="@dimen/content_sub_title_size" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/text_product_3_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/product_text_margin_top"
                        android:text="@string/product_1_price"
                        android:textColor="@color/price_text"
                        android:textSize="@dimen/content_title_size"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/product_4"
                android:layout_width="0dp"
                android:layout_height="@dimen/product_content_height"
                android:layout_marginStart="@dimen/product_content_margin_start"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.victorxu.muses.custom.view.AdvancedImageView
                    android:id="@+id/image_product_4_image"
                    android:layout_width="@dimen/product_content_image_size"
                    android:layout_height="@dimen/product_content_image_size"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:src="@drawable/product2"
                    app:borderRadius="@dimen/product_image_radius"
                    app:type="round" />

                <LinearLayout
                    android:layout_width="@dimen/product_content_image_size"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="start"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/text_product_4_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/product_text_margin_top"
                        android:singleLine="true"
                        android:text="@string/product_2_title"
                        android:textColor="@color/title_text_default"
                        android:textSize="@dimen/content_title_size"
                        android:textStyle="bold" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/text_product_4_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/product_text_margin_top"
                        android:singleLine="true"
                        android:text="@string/product_2_tag"
                        android:textColor="@color/title_sub_text_default"
                        android:textSize="@dimen/content_sub_title_size" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/text_product_4_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/product_text_margin_top"
                        android:text="@string/product_2_price"
                        android:textColor="@color/price_text"
                        android:textSize="@dimen/content_title_size"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
