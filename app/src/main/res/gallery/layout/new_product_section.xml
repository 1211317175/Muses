<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_13"
    android:layout_marginTop="@dimen/dp_9"
    android:layout_marginEnd="@dimen/dp_13"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/new_product"
            android:textColor="@color/title_text_default"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/more_new_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more"
                android:textColor="@color/title_sub_text_default"
                android:textSize="@dimen/sp_14" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_13"
                android:layout_gravity="center_vertical"
                android:src="@drawable/more" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.victorxu.muses.custom.AdvancedImageView
            android:id="@+id/image_new_product_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_175"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_9"
            android:scaleType="fitXY"
            android:src="@drawable/product_title"
            app:borderRadius="@dimen/dp_4_5"
            app:type="round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/product_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_237"
                android:layout_marginEnd="@dimen/dp_2"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.victorxu.muses.custom.AdvancedImageView
                    android:id="@+id/image_product_1_image"
                    android:layout_width="@dimen/dp_158"
                    android:layout_height="@dimen/dp_158"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:src="@drawable/product1"
                    app:borderRadius="@dimen/dp_4_5"
                    app:type="round" />

                <LinearLayout
                    android:layout_width="@dimen/dp_158"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="start"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_product_1_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:singleLine="true"
                        android:text="@string/product_1_title"
                        android:textColor="@color/title_text_default"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_product_1_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:singleLine="true"
                        android:text="@string/product_1_tag"
                        android:textColor="@color/title_sub_text_default"
                        android:textSize="@dimen/sp_11" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_product_1_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:text="@string/product_1_price"
                        android:textColor="@color/price_text"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/product_2"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_237"
                android:layout_marginStart="@dimen/dp_2"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.victorxu.muses.custom.AdvancedImageView
                    android:id="@+id/image_product_2_image"
                    android:layout_width="@dimen/dp_158"
                    android:layout_height="@dimen/dp_158"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:src="@drawable/product2"
                    app:borderRadius="@dimen/dp_4_5"
                    app:type="round" />

                <LinearLayout
                    android:layout_width="@dimen/dp_158"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="start"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_product_2_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:singleLine="true"
                        android:text="@string/product_2_title"
                        android:textColor="@color/title_text_default"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_product_2_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:singleLine="true"
                        android:text="@string/product_2_tag"
                        android:textColor="@color/title_sub_text_default"
                        android:textSize="@dimen/sp_11" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_product_2_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:text="@string/product_2_price"
                        android:textColor="@color/price_text"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_9"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/product_3"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_237"
                android:layout_marginEnd="@dimen/dp_2"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.victorxu.muses.custom.AdvancedImageView
                    android:id="@+id/image_product_3_image"
                    android:layout_width="@dimen/dp_158"
                    android:layout_height="@dimen/dp_158"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:src="@drawable/product1"
                    app:borderRadius="@dimen/dp_4_5"
                    app:type="round" />

                <LinearLayout
                    android:layout_width="@dimen/dp_158"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="start"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_product_3_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:singleLine="true"
                        android:text="@string/product_1_title"
                        android:textColor="@color/title_text_default"
                        android:textSize="@dimen/sp_17"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_product_3_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:singleLine="true"
                        android:text="@string/product_1_tag"
                        android:textColor="@color/title_sub_text_default"
                        android:textSize="@dimen/sp_13" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_product_3_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:text="@string/product_1_price"
                        android:textColor="@color/price_text"
                        android:textSize="@dimen/sp_17"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/product_4"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_237"
                android:layout_marginStart="@dimen/dp_2"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.victorxu.muses.custom.AdvancedImageView
                    android:id="@+id/image_product_4_image"
                    android:layout_width="@dimen/dp_158"
                    android:layout_height="@dimen/dp_158"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:src="@drawable/product2"
                    app:borderRadius="@dimen/dp_4_5"
                    app:type="round" />

                <LinearLayout
                    android:layout_width="@dimen/dp_158"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="start"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_product_4_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:singleLine="true"
                        android:text="@string/product_2_title"
                        android:textColor="@color/title_text_default"
                        android:textSize="@dimen/sp_17"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_product_4_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:singleLine="true"
                        android:text="@string/product_2_tag"
                        android:textColor="@color/title_sub_text_default"
                        android:textSize="@dimen/sp_13" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_product_4_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:text="@string/product_2_price"
                        android:textColor="@color/price_text"
                        android:textSize="@dimen/sp_17"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
