<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/recommend_margin_top"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/recommend_margin_start"
        android:layout_marginEnd="@dimen/recommend_margin_end">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/recommend_today"
            android:textColor="@color/title_text_default"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/more_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more"
                android:textColor="@color/title_sub_text_default"
                android:textSize="@dimen/tip_text_size" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/more_icon_size"
                android:layout_height="@dimen/more_icon_size"
                android:layout_gravity="center_vertical"
                android:src="@drawable/more" />

        </LinearLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/recommend_margin_top" />

</LinearLayout>
