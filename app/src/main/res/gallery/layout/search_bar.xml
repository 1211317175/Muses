<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.victorxu.muses.custom.view.SearchView
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/search_view_margin_start"
            android:layout_marginTop="@dimen/search_view_margin_top"
            android:layout_marginEnd="@dimen/search_view_margin_end"
            android:layout_marginBottom="@dimen/search_view_margin_bottom"
            android:layout_weight="@integer/search_view_weight" />

        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="@dimen/button_message_size"
            android:layout_height="@dimen/button_message_size"
            android:layout_gravity="center|end"
            android:layout_margin="@dimen/button_message_margin"
            android:background="@drawable/message" />

    </LinearLayout>


</android.support.v7.widget.CardView>
