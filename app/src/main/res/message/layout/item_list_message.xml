<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15">

    <com.victorxu.muses.custom.AdvancedImageView
        android:id="@+id/list_message_image_avatar"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_centerVertical="true"
        android:src="@drawable/logo"
        app:type="circle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@id/list_message_image_avatar"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_0"
        android:paddingEnd="@dimen/dp_35">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/list_message_text_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/list_message_text_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:maxLines="1"
            android:singleLine="true"
            android:text="亲，请确认一下订单信息。以下是您的收货信息"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="end"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/list_message_text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:05"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/sp_12" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/list_message_text_message_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99+"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:background="@drawable/drag_point_bg"/>

    </LinearLayout>

</RelativeLayout>
