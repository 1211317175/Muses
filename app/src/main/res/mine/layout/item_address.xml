<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_15">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_address_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_gray_bg"
        android:gravity="center"
        android:text="许"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_address_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@id/item_address_last_name"
        android:text="许楠钒"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_address_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_address_name"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@id/item_address_name"
        android:text="12345678910"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/sp_12" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_address_default_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_address_phone"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_toEndOf="@id/item_address_phone"
        android:background="@drawable/square_light_red_bg"
        android:paddingStart="@dimen/dp_3"
        android:paddingEnd="@dimen/dp_3"
        android:text="@string/default_address"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/sp_11"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_address_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_address_name"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_toStartOf="@id/item_address_line"
        android:layout_toEndOf="@id/item_address_last_name"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_address_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/item_address_edit"
        android:text="@string/edit"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/sp_13" />

    <View
        android:id="@+id/item_address_line"
        android:layout_width="@dimen/dp_1"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_address_last_name"
        android:layout_alignBottom="@id/item_address_last_name"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_toStartOf="@id/item_address_edit"
        android:background="@color/light_white" />

</RelativeLayout>
