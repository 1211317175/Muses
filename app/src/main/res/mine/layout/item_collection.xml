<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_5"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_5">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_collection_image"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"
        android:scaleType="centerCrop" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_collection_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@id/item_collection_image"
        android:maxLines="3"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_13" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_collection_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_collection_title"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toEndOf="@id/item_collection_image" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_collection_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_collection_image"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@id/item_collection_image"
        android:drawableStart="@drawable/yuan_red_small"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />

</RelativeLayout>
