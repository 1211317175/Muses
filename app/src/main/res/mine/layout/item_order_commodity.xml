<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/dp_5"
    android:paddingEnd="@dimen/dp_15">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_order_image_order"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_centerVertical="true" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_order_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@id/item_order_image_order"
        android:maxLines="3"
        android:text="这是一个商品名称样字段，这个商品样例名称最长为三行文字，以下部分为重复填充字数测试部分。"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_order_text_attr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_order_text_title"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toEndOf="@id/item_order_image_order"
        android:maxLines="2"
        android:text="这是一个商品所选属性的样例字段，所选属性字段最长为两行"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/sp_10" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_order_text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_order_text_attr"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toEndOf="@id/item_order_image_order"
        android:drawableStart="@drawable/yuan_red_small"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_order_text_price"
        android:layout_toStartOf="@id/item_order_text_number"
        android:text="@string/x"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/sp_14" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_order_text_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_order_text_price"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_5"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/sp_14" />

</RelativeLayout>