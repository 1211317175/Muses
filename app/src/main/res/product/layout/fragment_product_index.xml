<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.victorxu.muses.custom.scroll_view.GradationScrollView
        android:id="@+id/test_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/banner_product"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_360"
                app:layout_collapseMode="parallax" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/product_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="@string/product_1_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/product_detail_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/product_1_tag"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/product_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="@string/product_2_price"
                    android:textColor="@color/dark_red"
                    android:textSize="@dimen/sp_30" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/product_detail_price_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_toEndOf="@id/product_detail_price"
                    android:text="@string/product_1_price"
                    android:textSize="@dimen/sp_20" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/product_attr_bg"
                android:padding="@dimen/dp_5">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="参数" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/dp_60"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="查看产品相关信息" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="@color/recycler_swipe_color_loading_color1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="@color/recycler_swipe_color_loading_color1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100" />

            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/dp_100"-->
            <!--android:background="@color/recycler_swipe_color_loading_color1"/>-->

            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/dp_100"-->
            <!--android:background="@color/black"/>-->

            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/dp_100"/>-->

            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/dp_100"-->
            <!--android:background="@color/recycler_swipe_color_loading_color1"/>-->

            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/dp_100"-->
            <!--android:background="@color/black"/>-->

            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/dp_100"/>-->


        </LinearLayout>


    </com.victorxu.muses.custom.scroll_view.GradationScrollView>

</RelativeLayout>
