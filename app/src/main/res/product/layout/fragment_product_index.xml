<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.victorxu.muses.custom.scroll_view.GradationScrollView
        android:id="@+id/product_index_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_45"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/product_index_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_360"
                app:layout_collapseMode="parallax" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_15">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/product_index_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="@string/product_1_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/product_index_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_index_title"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/product_1_tag"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/product_index_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_index_tags"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/product_2_price"
                    android:textColor="@color/dark_red"
                    android:textSize="@dimen/sp_30"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/product_index_price_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/product_index_price"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_toEndOf="@id/product_index_price"
                    android:text="@string/product_1_price"
                    android:textSize="@dimen/sp_18" />

            </RelativeLayout>

            <include layout="@layout/product_index_parameter_part" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="@color/recycler_swipe_color_loading_color1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="@color/recycler_swipe_color_loading_color1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100" />

        </LinearLayout>


    </com.victorxu.muses.custom.scroll_view.GradationScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentBottom="true"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        app:cardElevation="@dimen/dp_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/product_index_add_to_cart"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/left_button_bg"
                    android:text="@string/add_to_cart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/product_index_buy_now"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/right_button_bg"
                    android:text="@string/buy_now"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>
