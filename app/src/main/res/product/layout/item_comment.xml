<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/product_comment_image_avatar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@id/product_comment_image_avatar"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/product_comment_text_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="夏朗拿度"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/product_comment_rating_bar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:numStars="5"
                android:stepSize="0.5" />

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_comment_text_comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="2018-3-21"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/sp_11" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/product_comment_text_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/dp_65"
        android:maxLines="5"
        android:text="这款北欧风情装饰画质量很不错，图案比较美观，印刷质感也很好。发货迅速，下次还到这里购买。"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_13" />

    <RelativeLayout
        android:id="@+id/product_comment_relative_image_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_comment_text_comment"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/product_comment_image_comment_image_1"
            style="@style/Product_Comment_Image"
            android:layout_alignParentStart="true" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/product_comment_image_comment_image_2"
            style="@style/Product_Comment_Image"
            android:layout_centerHorizontal="true" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/product_comment_image_comment_image_3"
            style="@style/Product_Comment_Image"
            android:layout_alignParentEnd="true" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/product_comment_image_comment_image_4"
            style="@style/Product_Comment_Image"
            android:layout_below="@id/product_comment_image_comment_image_1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/dp_3" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/product_comment_image_comment_image_5"
            style="@style/Product_Comment_Image"
            android:layout_below="@id/product_comment_image_comment_image_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_3" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/product_comment_image_comment_image_6"
            style="@style/Product_Comment_Image"
            android:layout_below="@id/product_comment_image_comment_image_3"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_3" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_comment_relative_image_container"
        android:layout_marginTop="@dimen/dp_10">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_comment_text_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:maxEms="25"
            android:maxLines="1"
            android:text="北欧装饰画"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/sp_10" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_below="@id/product_comment_text_model"
            android:layout_alignParentEnd="true"
            android:gravity="center|start"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@drawable/thumb_up"
                android:tint="@color/light_gray" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/product_comment_text_like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_3"
                android:text="23"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/sp_12" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_20"
                android:src="@drawable/comment"
                android:tint="@color/light_gray" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/product_comment_text_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_3"
                android:text="99+"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/sp_12" />


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
