<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_350"
    android:layout_height="@dimen/dp_220"
    android:layout_marginEnd="@dimen/dp_5"
    android:background="@drawable/product_attr_bg"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:orientation="horizontal">

        <com.victorxu.muses.custom.AdvancedImageView
            android:id="@+id/product_index_evaluation_image_avatar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/logo"
            app:type="circle" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@id/product_index_evaluation_image_avatar"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/product_index_evaluation_text_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="夏朗拿度"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/product_index_evaluation_text_comment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-3-21"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center|start"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@drawable/checked"
                android:tint="@color/light_gray" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/product_index_evaluation_text_like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_3"
                android:text="23"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/sp_12" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="21dp"
                android:layout_height="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_10"
                android:src="@drawable/checked"
                android:tint="@color/light_gray" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/product_index_evaluation_text_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_3"
                android:text="99+"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/sp_12" />


        </LinearLayout>

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/product_index_evaluation_text_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/dp_65"
        android:maxLines="2"
        android:text="这款耳机主打低音，一直很喜欢索尼耳机的柔和。这款耳机低音不哄耳。振膜很给力，耳机响起来..."
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.victorxu.muses.custom.AdvancedImageView
            android:id="@+id/product_index_evaluation_image_comment_image_1"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentStart="true"
            android:src="@drawable/product1"
            app:type="round" />

        <com.victorxu.muses.custom.AdvancedImageView
            android:id="@+id/product_index_evaluation_image_comment_image_2"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_60"
            android:layout_centerInParent="true"
            android:src="@drawable/product1"
            app:type="round" />

        <com.victorxu.muses.custom.AdvancedImageView
            android:id="@+id/product_index_evaluation_image_comment_image_3"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentEnd="true"
            android:src="@drawable/product1"
            app:type="round" />

    </RelativeLayout>


</RelativeLayout>
