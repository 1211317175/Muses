<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="vertical">

    <com.victorxu.muses.custom.AdvancedImageView
        android:id="@+id/image_product_image"
        style="@style/gallery_commodity_image"
        android:src="@drawable/product1"
        app:borderRadius="@dimen/dp_4_5"
        app:type="round" />

    <LinearLayout
        android:layout_width="@dimen/dp_158"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="start"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_product_title"
            style="@style/gallery_commodity_title"
            android:text="@string/product_1_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_product_tag"
            style="@style/gallery_commodity_tag"
            android:text="@string/product_1_tag" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_product_price"
            style="@style/gallery_commodity_price"
            android:text="@string/product_1_price" />

    </LinearLayout>

</LinearLayout>
