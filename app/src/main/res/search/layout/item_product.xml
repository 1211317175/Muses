<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="vertical">

    <com.victorxu.muses.custom.AdvancedImageView
        android:id="@+id/image_product_image"
        android:layout_width="@dimen/dp_158"
        android:layout_height="@dimen/dp_158"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@drawable/product1"
        app:borderRadius="@dimen/dp_4_5"
        app:type="round" />

    <LinearLayout
        android:layout_width="@dimen/dp_158"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="start"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:singleLine="true"
            android:text="@string/product_1_title"
            android:textColor="@color/title_text_default"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_product_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:singleLine="true"
            android:text="@string/product_1_tag"
            android:textColor="@color/title_sub_text_default"
            android:textSize="@dimen/sp_11" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:text="@string/product_1_price"
            android:textColor="@color/price_text"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
