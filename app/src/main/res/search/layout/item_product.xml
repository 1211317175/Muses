<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="@dimen/dp_1">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_product_image"
            style="@style/gallery_commodity_image" />

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="@dimen/dp_158"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="start"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_product_title"
            style="@style/gallery_commodity_title"
            android:text="@string/product_1_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_product_tag"
            style="@style/gallery_commodity_tag"
            android:text="@string/product_1_tag" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_product_price"
            style="@style/gallery_commodity_price"
            android:text="@string/product_1_price" />

    </LinearLayout>

</LinearLayout>
